<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainURL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/riple_green"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_blue"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/idlogo"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:background="@drawable/crtlogo" />


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginStart="30dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ripple_blue"
            android:backgroundTint="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <LinearLayout
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CONFIGURATION"
                        android:textColor="@color/button_bg_red"
                        android:gravity="center"
                        android:textSize="25dp">

                    </TextView>



                    <EditText
                        android:textSize="12dp"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:hint="http://example.com/folder_name/"
                        android:paddingLeft="10dp"
                        android:gravity="left|center"
                        android:layout_gravity="center"
                        android:id="@+id/edt_username"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/btn_configure"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:textSize="20sp"
                        android:background="@drawable/grey"
                        android:layout_gravity="center"
                        android:text="Configure"
                        android:textAllCaps="false"
                        android:textColor="@color/button_bg_red" />
                </LinearLayout>




            </LinearLayout>

        </LinearLayout>





    </LinearLayout>



</LinearLayout>